{
  "name": "v6",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development bun --hot src/server.ts",
    "dev:clean": "bun run clean && bun run dev",
    "setup": "bun run server/scripts/setup.ts",
    "build": "NODE_ENV=production bun run scripts/build-static.ts",
    "build:dev": "NODE_ENV=development bun run scripts/build-static.ts",
    "build:validate": "bun run scripts/build-static.ts --validate-only",
    "test": "bun test",
    "preview": "NODE_ENV=production bun src/server.ts",
    "preview:static": "bun run build && npx serve dist -l 3001 --cors --single",
    "serve:static": "npx serve dist -l 3001 --cors --single",
    "config:check": "bun run scripts/validate-env.ts",
    "config:dump": "node -e \"import('./dist/config.json').then(m=>console.log(JSON.stringify(m, null, 2)))\"",
    "clean": "rm -rf dist node_modules/.cache bun.lockb",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,ts,jsx,tsx,json,md,yml,yaml}\"",
    "lint:fix": "prettier --write \"**/*.{js,ts,jsx,tsx,json,md,yml,yaml}\""
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "bun-plugin-tailwind": "^0.0.15",
    "marked": "^16.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.13"
  }
}
