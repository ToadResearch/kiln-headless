# .env.example
# Copy to .env.local for development, or set in hosting platform for production
# All PUBLIC_KILN_* values appear in /config.json

# === REQUIRED: LLM CONFIGURATION ===
PUBLIC_KILN_LLM_URL=https://openrouter.ai/api/v1
PUBLIC_KILN_MODEL=openai/gpt-4o-mini
PUBLIC_KILN_TEMPERATURE=0.8

# === REQUIRED: FHIR CONFIGURATION ===
PUBLIC_KILN_FHIR_BASE_URL=https://example.org/fhir
# Leave blank to auto-detect same-origin deployed server for validation services
PUBLIC_KILN_VALIDATION_SERVICES_URL=
PUBLIC_KILN_FHIR_GEN_CONCURRENCY=1

# === OPTIONAL: APP CONFIGURATION ===
PUBLIC_KILN_DEBUG_MODE=true
PUBLIC_KILN_MAX_RETRIES=3
PUBLIC_KILN_LLM_MAX_CONCURRENCY=4
PUBLIC_KILN_BASE_PATH=/

# === SERVER-ONLY (never exposed) ===
# Presence only used to indicate whether a key is configured; actual key not embedded
# KILN_API_KEY=sk-... 
